@import '../../weui.wxss';


.new {
  width: 100%;
}
.new   .textarea {
    margin-left: 15px;
    margin-top: 15px;
    width: 90%;
    color: #333;
    min-height: 180px;
    background: #FFF;
    font-size: 16px;
    line-height: 36px;
}

.new   .image-list {
    margin-left: 15px;
    margin-top: 15px;
    padding-top: 0;
    width: 90%;
    background: #FFF;
    overflow: hidden;
 }


.new .image-list  .choosed-image-list {
      position: relative;
      float: left;
      width: 70px;
      height: 70px;
      margin-right: 15px;
      margin-top: 15px;
    }

.new .image-list  .choosed-image-list .choosed-image {
        width: 100%;
        height: 100%;
}

.new .image-list  .choosed-image-list .choosed-image-delete-btn {
        position: absolute;
        right: -10px;
        top: -10px;
        width: 20px;
        height: 20px;
}


.new .image-list  .choosed-image-list .choosed-image-delete-btn-icon {
        width: 20px;
        height: 20px;
}

.new .image-list .choose-image-btn {
      float: left;
      width: 70px;
      height: 70px;
      margin-top: 15px;
    }


.new .image-list .choose-image-btn   .choose-image-btn-icon {
        width: 70px;
        height: 70px;
}

.new .commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}


.new .searchBook{
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  height: 600rpx;
}


.book_item{
  background-color: white;
  min-height: 120px;
  word-break: break-all;
  width: 90%
}
.book_item image{
  margin-top: 15px;
  margin-left: 5px;
}

.book_item .book_name{
  left: 10px;
  margin-top: 15px;
  color: black;
}

.book_item .book_info{
  margin-left: 20px;
  margin-top: 15px;
}

.book_item .line{
  background-color: whitesmoke;
  height: 1px;
}

.book_item  text{
  color: grey;
}

.loading{  
  padding: 10rpx;  
  text-align: center;
  font-size: 0.8rem;  
}  
.loading:before{  
  display: inline-block;  
  margin-right: 5rpx;  
  vertical-align: middle;  
  content: '';  
  width: 40rpx;  
  height: 40rpx;  
  background-image: url(../../icons/loading1.png) no-repeat;  
  background-size: contain;  
  animation: rotate 1s linear infinite;  
}  
.loading.complete:before{  
  display: none;  
}  




.new  .isanonymous {
    background: #FFF;
    padding: 15px;
    padding-top: 0;
    overflow: hidden;
  }

.new  .isanonymous  .isanonymous-btn {
      position: relative;
      float: right;
      width: 55px;
      height: 32px;
      padding: 0 6px;
      border-radius: 18px;
      transition: all 300ms ease;
}

.new  .isanonymous  .isanonymous-btn text {
        color: #FFF;
        font-size: 12px;
        line-height: 32px;
      }
.new  .isanonymous  .isanonymous-btn   .anonymous-text {
        float: left;
      }
.new  .isanonymous  .isanonymous-btn  .named-text {
        float: right;
      }

.new  .isanonymous  .isanonymous-btn .isanonymous-btn-key {
        position: absolute;
        left: 1px;
        top: 1px;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background: #FFF;
        box-shadow: 0 2px 3px rgba(0,0,0,0.4);
        transition: all 300ms ease;
}

.new  .isanonymous  .anonymous {
      background: #FA6570;
 }

.new  .isanonymous  .anonymous .isanonymous-btn-key {
        transform: translateX(34px);
 }    

.new  .isanonymous .named {
      background: #2ECC71;
 }

.new  .isanonymous .named   .isanonymous-btn-key {
        transform: translateX(0);
}

.new  .submit-btn {
    margin: 0 auto;
    margin-top: 20px;
    width: 90%;
}


.new  .submit-btn    .submit {
      width: 100%;
      color: #FFF;
      background: #59adff;
      border: none;
    }

.new  .submit-btn   button[disabled][type="primary"] {
      opacity: 0.7
}   

.new  .submit-btn  .button-hover {
      background: #d75760;
}