  /* new btn */
  .newBtn {
    position: fixed;
    right: 20px;
    bottom: 70px;
    width: 60px;
    height: 60px;
    background: #59adff;
    border-radius: 50%;
    text-align: center;
    box-shadow: 0 2px 3px rgba(0,0,0,0.4);
    transition: all 150ms ease;
    z-index: 100;
  }

 .newBtn .newBtn-icon {
      margin-top: 15px;
      width: 30px;
      height: 30px;
 }
 
   .newBtn-hover {
    background: #59adff;
    box-shadow: 0 1px 2px rgba(0,0,0,.2);
  }
  
.loading{  
  padding: 10rpx;  
  text-align: center;
  font-size: 18px;
  line-height: 28px;
  color: #333;
}  
.loading:before{  
  display: inline-block;  
  margin-right: 5rpx;  
  vertical-align: middle;  
  content: '';  
  width: 40rpx;  
  height: 40rpx;  
  background-image: url(../../icons/loading1.png) no-repeat;  
  background-size: contain;  
  animation: rotate 1s linear infinite;  
}  
.loading.complete:before{  
  display: none;  
}  

.comment{
  width: 100%;
  margin-bottom: 60px;
}


.comment .line{
  background-color: whitesmoke;
  height: 1px;
}



.comment .main{
    width: 90%;
    margin-top: 15px;
    margin-left: 15px;
    padding-bottom: 12px;
    margin-bottom: 10px;
    background: #FFF;
}

.comment .main .name{
  float: left;
  font-size: 16px;
  font-weight: bold;
  line-height: 20px;
  color: #333;
  margin-left: 20rpx;

}

.comment .main .time{
  width: 100%;
  margin-top: 2rpx;
  font-size: 0.8rem;
  color: #777;
  display: block;
}

.comment .main .user-avatar image{
  width: 80rpx;
  height: 80rpx;
  border: 0 solid #ff0000;
  border-radius: 100rpx;
}




.comment .main .list-item-body{
  width: 100%;
  margin-top: 10rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.comment .main .list-item-body .content{
    float: left;
    width: 90%;
    font-size: 16px;
    line-height: 28px;
    color: #333;
    text-align: justify;
}

.comment .main .list-item-body .list-item-body-images{
    float: left;
    width: 100%;
    margin-top: 10px;
}


.comment .main .list-item-body .list-item-body-images .list-item-body-image{
    float: left;
    width: 30%;
    margin-right: 5px;
    margin-top: 5px;
    height: 110px;
}



.comment .main .list-item-operations {
      width: 100%;
      margin-top: 10px;
      padding-top: 15px;
      border-top: 1px solid #EEE;
      overflow: hidden;
}

.comment .main .list-item-operations  .list-item-operation-like{
    float: left;
    width: 70px;
    position: relative;
    text-align: center;
}

.comment .main .list-item-operations  .list-item-operation-like        .list-item-operation-icon {
          margin-right: 5px;
          width: 20px;
          height: 20px;
}


.comment .main .list-item-operations  .list-item-operation-like .number {
    position: absolute;
    top: 5px;
    left: 50%;
    margin-left: 12px;
    color: #999;
    font-size: 14px;
    line-height: 14px;
    font-weight: bold;
}

.comment .main .list-item-operations  .list-item-operation-like .active {
    color: #FA6570;
}

.comment .main .list-item-operations  .list-item-operation-comment{
    float: left;
    width: 70px;
    position: relative;
    text-align: center;
}

.comment .main .list-item-operations  .list-item-operation-comment .list-item-operation-icon {
          margin-right: 5px;
          width: 20px;
          height: 20px;
}

.comment .main .list-item-operations  .list-item-operation-comment  .number {
    position: absolute;
    top: 5px;
    left: 50%;
    margin-left: 12px;
    color: #999;
    font-size: 14px;
    line-height: 14px;
    font-weight: bold;
}


.comment .main .list-item-operations .list-item-operation-more{
    float: left;
    width: 70px;
    position: relative;
    text-align: center;
}

.comment .main .list-item-operations .list-item-operation-more .list-item-operation-icon {
          margin-right: 5px;
          width: 20px;
          height: 20px;
}


.comment .main .list-item-operations .item-operation-like-scale{
  animation: clickAnimation 300ms ease;
}

.comment .main .list-item-operations  .list-item-operation-more {
        float: right;
        text-align: center;
}

@keyframes clickAnimation {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.5);
  }
  100% {
    transform: scale(1);
  }
}