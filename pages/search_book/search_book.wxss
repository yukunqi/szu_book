/* pages/books/books.wxss */
@import '../../weui.wxss';


.weui-footer .network_search{
  margin-top: 50rpx;
  margin-bottom: 100rpx;
  text-align: center;
}

.book_item{
  background-color: white;
  min-height: 120px;
  word-break: break-all;
  width: 90%
}
.book_item image{
  margin-top: 15px;
  margin-left: 5px;
}

.book_item .book_name{
  left: 10px;
  margin-top: 15px;
  color: black;
}

.book_item .book_info{
  margin-left: 20px;
  margin-top: 15px;
}

.book_item .line{
  background-color: whitesmoke;
  height: 1px;
}

.book_item  text{
  color: grey;
}

.loading{  
  padding: 10rpx;  
  text-align: center;
  font-size: 0.8rem;  
}  
.loading:before{  
  display: inline-block;  
  margin-right: 5rpx;  
  vertical-align: middle;  
  content: '';  
  width: 40rpx;  
  height: 40rpx;  
  background-image: url(../../icons/loading1.png) no-repeat;  
  background-size: contain;  
  animation: rotate 1s linear infinite;  
}  
.loading.complete:before{  
  display: none;  
}  

