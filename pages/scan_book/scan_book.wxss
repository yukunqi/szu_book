@import '../../weui.wxss';

.container{
  width: 90%;
  margin: 0 auto;
}

.container .book_image{
  width: 100%;
  height: 600rpx;
  text-align: center;
}

.container .book_image image{
    width: 400rpx;
    height: 520rpx;
}

.container .middle{
  width: 100%;
  display: flex;
  margin-top: 40rpx;
  line-height: 28px;
  word-break: break-all;
  text-align: justify;
}

.container .tagList{
  margin-top: 40rpx;
  display: flex;
  flex-wrap: wrap;
}

.container .tagList .it{
    width: auto;
    word-break: keep-all;
    white-space: nowrap;
    background-color: #f5f5f5;
    color: #37A;
    font-size: 1rem;
    padding: 15rpx 15rpx 15rpx;
    display: inline-block;
    margin: 0 15rpx 30rpx 0;
    line-height: 1rem;
}


.container .author_intro_hid{
  margin-top: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
  text-overflow: ellipsis;
  overflow : hidden;
}

.container .author_intro{
  margin-top:  40rpx;
}

.container .btn_add{
  margin-top: 100rpx;
}
