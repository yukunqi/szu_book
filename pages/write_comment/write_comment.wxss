@import '../../weui.wxss';


.isanonymous {
background: #FFF;
padding: 15px;
padding-top: 0;
overflow: hidden;
}

.isanonymous text {
color: #FFF;
font-size: 12px;
line-height: 32px;
}

.isanonymous  .isanonymous-btn {
position: relative;
float: right;
width: 55px;
height: 32px;
padding: 0 6px;
border-radius: 18px;
transition: all 300ms ease;
}


.isanonymous .isanonymous-btn text {
color: #FFF;
font-size: 12px;
line-height: 32px;
}

.isanonymous .isanonymous-btn .anonymous-text {
float: left;
}
  .isanonymous .isanonymous-btn .named-text {
float: right;
}

.isanonymous .isanonymous-btn .isanonymous-btn-key {
position: absolute;
left: 1px;
top: 1px;
width: 30px;
height: 30px;
border-radius: 50%;
background: #FFF;
box-shadow: 0 2px 3px rgba(0,0,0,0.4);
transition: all 300ms ease;
}

.isanonymous  .anonymous {
  background: #59adff;
}

.isanonymous .anonymous .isanonymous-btn-key {
    transform: translateX(34px);
}


.isanonymous .named {
  background: #2ECC71;
}

.isanonymous .named .isanonymous-btn-key {
    transform: translateX(0);
}