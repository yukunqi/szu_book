/* pages/books/books.wxss */
@import '../../weui.wxss';

  /* new btn */
  .newBtn {
    position: fixed;
    right: 20px;
    bottom: 70px;
    width: 60px;
    height: 60px;
    background: #59adff;
    border-radius: 50%;
    text-align: center;
    box-shadow: 0 2px 3px rgba(0,0,0,0.4);
    transition: all 150ms ease;
    z-index: 100;
  }

 .newBtn .newBtn-icon {
      margin-top: 15px;
      width: 30px;
      height: 30px;
 }
 
   .newBtn-hover {
    background: #59adff;
    box-shadow: 0 1px 2px rgba(0,0,0,.2);
  }
  

.book_item{
  background-color: white;
  min-height: 120px;
  word-break: break-all;
  width: 90%
}
.book_item image{
  margin-top: 15px;
  margin-left: 5px;
}

.book_item .book_name{
  left: 10px;
  margin-top: 15px;
  color: black;
}

.book_item .book_info{
  margin-left: 20px;
  margin-top: 15px;
}

.book_item .line{
  background-color: whitesmoke;
  height: 1px;
}

.book_item  text{
  color: grey;
}

.loading{  
  padding: 10rpx;  
  text-align: center;
  font-size: 0.8rem;  
}  
.loading:before{  
  display: inline-block;  
  margin-right: 5rpx;  
  vertical-align: middle;  
  content: '';  
  width: 40rpx;  
  height: 40rpx;  
  background-image: url(../../icons/loading1.png) no-repeat;  
  background-size: contain;  
  animation: rotate 1s linear infinite;  
}  
.loading.complete:before{  
  display: none;  
}  



.nav-1{  
  flex: none;  
  display: flex;   
  background: #fff;  
  background-color: RGB(247, 247, 247);
  height: 80rpx;
}

.navbar{  
  display: flex;  
  background: #fff; 
  white-space: nowrap;
  overflow: hidden;
  flex: 0 0 100%; 
}  
.navbar .item{  
  position: relative;   
  text-align: center;  
  font-size: 30rpx;
  line-height: 80rpx;  
  color: gray;
  display: inline-block;
  padding-left: 20rpx;
  padding-right: 20rpx;
  width: 30%;
}  
.navbar .item.active{  
  color: #FFCC00;  
}  
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 4rpx;  
  background: #FFCC00;  
}  

